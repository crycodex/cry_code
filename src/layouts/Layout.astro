---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'cry.code - Portfolio', description = 'Portfolio personal de cry.code' } = Astro.props;
---

<!doctype html>
<html lang="es" id="html-root">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/img/logo/logo_remove.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script>
      // Initialize theme before page load to prevent flash
      (function() {
        const theme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body class=" text-base-content transition-colors duration-300 min-h-screen">
    <slot />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    font-family: Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Fondo negro total en modo oscuro */
  html[data-theme="dark"],
  html[data-theme="dark"] body {
    background-color: #000000 !important;
  }

  html[data-theme="dark"] body {
    background-color: #000000 !important;
  }

  * {
    box-sizing: border-box;
  }
</style>
