---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  /** Override canonical URL (default: site + pathname) */
  canonicalURL?: string;
  /** OG image path (e.g. /img/og.png). Defaults to site logo. */
  image?: string;
  /** Set to true to noindex this page */
  noindex?: boolean;
  /** Optional keywords for meta keywords */
  keywords?: string;
}

const { title = 'cry.code - Portfolio', description = 'Portfolio personal de cry.code', canonicalURL, image = '/img/logo/logo_remove.png', noindex = false, keywords } = Astro.props;

const site = import.meta.env.SITE ?? 'https://crycode.dev';
const canonical = canonicalURL ?? `${site}${Astro.url.pathname}`;
const imageURL = image.startsWith('http') ? image : `${site}${image}`;
---

<!doctype html>
<html lang="es" id="html-root">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    {keywords && <meta name="keywords" content={keywords} />}
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <link rel="canonical" href={canonical} />
    <link rel="icon" type="image/png" href="/img/logo/logo_remove.png" />
    <meta name="theme-color" content="#0A0A0A" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#f0f0f0" media="(prefers-color-scheme: light)" />
    <meta name="generator" content={Astro.generator} />
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:site_name" content="cry.code" />
    <meta property="og:locale" content="es_ES" />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Person',
      name: 'Cristhian Recalde',
      url: site,
      description: 'Ingeniero en Tecnologías de la Información, Desarrollador Full Stack y Creador de contenido de programación. Especializado en desarrollo web, móvil y aplicaciones.',
      jobTitle: 'Full Stack Developer',
      sameAs: [
        'https://github.com/crycodex',
        'https://www.linkedin.com/in/isnotcristhianr/',
        'https://www.instagram.com/cry.code/',
        'https://www.youtube.com/@cry_code',
      ],
    })}></script>
    <script>
      // Initialize theme before page load to prevent flash
      (function() {
        const theme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body class=" text-base-content transition-colors duration-300 min-h-screen">
    <slot />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    font-family: 'Ubuntu', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Fondo negro total en modo oscuro */
  html[data-theme="dark"],
  html[data-theme="dark"] body {
    background-color: #000000 !important;
  }

  html[data-theme="dark"] body {
    background-color: #000000 !important;
  }

  * {
    box-sizing: border-box;
  }
</style>
