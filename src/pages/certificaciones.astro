---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/react/Navbar';
import Footer from '../components/react/Footer';
import BackButton from '../components/react/BackButton';
import CertificationsList from '../components/react/CertificationsList';
import { LanguageProvider } from '../components/react/LanguageContext';

interface Certification {
  id: string;
  title: string;
  issuer: string;
  date: string;
  credentialId?: string;
  url?: string;
  description?: string;
}

const allCertifications: Certification[] = [
  {
    id: '1',
    title: 'Certificación en Desarrollo Web',
    issuer: 'Plataforma de Certificación',
    date: '2024',
    credentialId: 'ABC123',
